#include "main.h"
/**
 * reset_to_98 - Something useful
 * @n: Something more useful
 *
 * Return: Something much more useful
 */
void puts2(char *str)
{
  int a = 0;

  _putchar('0');
  while (*str != '\0')
	{
	  str++;
	  a++;
	  if (a % 2 == 0)
		{
		  _putchar(*str);
		}
	}
  str--;
  _putchar('\n');
}
