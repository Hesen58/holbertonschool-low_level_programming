#include "main.h"
/**
 * print_sign - Something usefull
 * @n: Something more usefull
 *
 * Return: Something much more usefull
 */
char *_strchr(char *s, char c)
{
  int i = 0, a = 0;
  while (*(s + i) != c && *(s + i) != '\0')
	{
	  i++;
	}
  while (*(s + a + i) != '\0')
	{
	  return (s + a + i);
	}
  return (0);
}
