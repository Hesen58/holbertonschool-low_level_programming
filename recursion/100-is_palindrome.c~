#include "main.h"
#include <string.h>
/**
 * reset_to_98 - Something useful
 * @n: Something more useful
 *
 * Return: Something much more useful
 */
int is_pal(char *s, int i)
{
  int l = strlen(s);
  
  if (*(s + i) == *(s + l - i - 1) && i < (l + 1) / 2)
	{
	  return (is_pal(s, i + 1));
	}
  else if (*(s + i) == *(s + l - i - 1) && i == (l + 1) / 2)
	{
	  return (1);
	}
  return (0);
}
/**
 * reset_to_98 - Something useful
 * @n: Something more useful
 *
 * Return: Something much more useful
 */
int is_palindrome(char *s)
{
  return (is_pal(s, 0));
}
